        <li class="profile"><a href="/user/profile">Mi Perfil</a></li>
        <li class="logout"><a href="/user/logout">Cerrar Sesión</a></li>
    <%} else {%>
        <li><a href="/user/registro">Inicia Sesión</a></li>
    <%}%>
    </ul>
